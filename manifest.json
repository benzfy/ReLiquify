{
  "manifest_version": 3,
  "name": "ReLiquify",
  "version": "1.0",
  "description": "Extract main content from web pages as clean Markdown. Copy to clipboard, download as file, or send to cloud directly.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
